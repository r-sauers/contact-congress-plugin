<?xml version="1.0"?>
<ruleset name="Congress">
    <rule ref="WordPress.WP.Capabilities">
        <properties>
            <property name="custom_capabilities" type="array">
                <element value="congress_manage_campaigns"/>
                <element value="congress_manage_representatives"/>
                <element value="congress_manage_keys"/>
            </property>
        </properties>
    </rule>
    <arg name="extensions" value="php" />
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/build/*</exclude-pattern>
    <exclude-pattern>*/congress-volume/*</exclude-pattern>
</ruleset>
